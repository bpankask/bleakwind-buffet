@page
@model IndexModel
@using BleakwindBuffet.Data;
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Bleakwind Buffet</h1>
    <p>
        We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim.
        Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas. Hack into a
        Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger! You’ve had a hard adventure
        and earned your loot, so spend it with us!
    </p>
    <div class="background">
        <h3>Combine any Entree, Side, and Drink for a dollar off total cost.</h3>

        <h2>Entrees</h2>

        @foreach (IOrderItem item in Menu.Entrees())
        {
            <div class="menuItem">
                <dive>
                    <h5>@item</h5>
                </dive>
                <div class="price">
                    $
                    @item.Price
                </div>
                <div class="calories">
                    @item.Calories
                </div>
            </div>
        }

        <h2>Sides</h2>

        @foreach (IOrderItem item in Menu.Sides())
        {
            <div class="menuItem">
                <dive>
                    <h5>@item</h5>
                </dive>
                <div class="price">
                    $
                    @item.Price
                </div>
                <div class="calories">
                    @item.Calories
                </div>
            </div>
        }

        <h2>Drinks</h2>

        @foreach (IOrderItem item in Menu.Drinks())
        {
            <div class="menuItem">
                <dive>
                    <h5>@item</h5>
                </dive>
                <div class="price">
                    $
                    @item.Price
                </div>
                <div class="calories">
                    @item.Calories
                </div>
            </div>
        }
    </div>
</div>
